set(ANGLE_FOUND true)
set(ANGLE_VERSION "chromium/2757")
get_filename_component(ANGLE_ROOT "${CMAKE_CURRENT_LIST_FILE}" PATH)

if(NOT TARGET ANGLE)
  add_library(ANGLE STATIC IMPORTED)
  set_target_properties(ANGLE PROPERTIES
    INTERFACE_INCLUDE_DIRECTORIES "${ANGLE_ROOT}/include"
    IMPORTED_LOCATION_DEBUG "${ANGLE_ROOT}/lib/debug/libANGLE.lib"
    IMPORTED_LOCATION_RELEASE "${ANGLE_ROOT}/lib/release/libANGLE.lib"
    IMPORTED_CONFIGURATIONS "DEBUG;RELEASE"
    IMPORTED_LINK_INTERFACE_LANGUAGES "CXX")
endif()

if(NOT TARGET GLESv2)
  add_library(GLESv2 STATIC IMPORTED)
  set_target_properties(GLESv2 PROPERTIES
    INTERFACE_INCLUDE_DIRECTORIES "${ANGLE_ROOT}/include"
    INTERFACE_COMPILE_DEFINITIONS "GL_GLEXT_PROTOTYPES=1"
    IMPORTED_LOCATION_DEBUG "${ANGLE_ROOT}/lib/debug/libGLESv2.lib"
    IMPORTED_LOCATION_RELEASE "${ANGLE_ROOT}/lib/release/libGLESv2.lib"
    IMPORTED_CONFIGURATIONS "DEBUG;RELEASE"
    IMPORTED_LINK_INTERFACE_LANGUAGES "CXX"
    INTERFACE_LINK_LIBRARIES "ANGLE")
endif()

if(NOT TARGET EGL)
  add_library(EGL STATIC IMPORTED)
  set_target_properties(EGL PROPERTIES
    INTERFACE_INCLUDE_DIRECTORIES "${ANGLE_ROOT}/include"
    INTERFACE_COMPILE_DEFINITIONS "EGL_EGLEXT_PROTOTYPES=1"
    IMPORTED_LOCATION_DEBUG "${ANGLE_ROOT}/lib/debug/libEGL.lib"
    IMPORTED_LOCATION_RELEASE "${ANGLE_ROOT}/lib/release/libEGL.lib"
    IMPORTED_CONFIGURATIONS "DEBUG;RELEASE"
    IMPORTED_LINK_INTERFACE_LANGUAGES "CXX"
    INTERFACE_LINK_LIBRARIES "ANGLE;GLESv2")
endif()
